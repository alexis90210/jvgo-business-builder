{% extends "dashboard/_base.html.twig" %}

{% block injectedPage %}

	<!-- start page title -->
	<div class="row">
		<div class="col-12">
			<div class="page-title-box d-flex align-items-center justify-content-between">
				<h4 class="page-title mb-0 font-size-18">Tableau de bord</h4>
			</div>
		</div>
	</div>
	<!-- end page title -->

	<div class="row">
		<div class="col-xl-3">
			<div class="card">
				<div class="card-body">
					<div class="d-flex align-items-start">
						<div class="avatar-sm font-size-20 me-3">
							<span class="avatar-title bg-soft-primary text-primary rounded">
								<i class="mdi mdi-bank"></i>
							</span>
						</div>
						<div class="flex-1">
							<div class="font-size-16 mt-2">Stats Entreprise</div>
						</div>
					</div>
					<h4 class="mt-4">{{ count_entreprise }}</h4>
					<div class="row">
						<div class="col-7">
							<p class="mb-0">
								<span class="text-dark me-2">
									Demande{% if count_entreprise > 0 %}s{% endif %}
								</span>
							</p>
						</div>
						<div class="col-5 align-self-center">
							<div class="progress progress-sm">
								<div class="progress-bar bg-primary" role="progressbar" style="width: 62%" aria-valuenow="62" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="card">
				<div class="card-body">
					<div class="d-flex align-items-start">
						<div class="avatar-sm font-size-20 me-3">
							<span class="avatar-title bg-soft-primary text-primary rounded">
								<i class="mdi mdi-currency-usd"></i>
							</span>
						</div>
						<div class="flex-1">
							<div class="font-size-16 mt-2">Stat Comptabilité</div>

						</div>
					</div>
					<h4 class="mt-4">{{ count_comptabilite }}</h4>
					<div class="row">
						<div class="col-7">
							<p class="mb-0">
								<span class="text-dark me-2">
									Demande{% if count_comptabilite > 0 %}s{% endif %}
								</span>
							</p>
						</div>
						<div class="col-5 align-self-center">
							<div class="progress progress-sm">
								<div class="progress-bar bg-success" role="progressbar" style="width: 62%" aria-valuenow="62" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-xl-9">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title mb-4">Les 4 dernières demandes (creation d'entreprise)</h4>

					<div class="table-responsive">
						<table class="table table-centered">
							<thead>
								<tr>
									<th scope="col">Id no.</th>
									<th scope="col">Noms & Prenoms</th>
									<th scope="col">Email</th>
									<th scope="col" colspan="2">Type/Entreprise</th>
								</tr>
							</thead>
							<tbody>
							{% for demande in entreprise %}	
										{% if  demande.id < 5 %}	

											<tr>
												<td>
													<a href="javascript: void(0);" class="text-body fw-medium">#{{ demande.id }}</a>
												</td>
												<td>{{ demande.nom }} {{ demande.prenom }}</td>
												<td>{{ demande.Email }}</td>
												<td>
													<div>{{ demande.TypeEntreprise}}</div>
													<span class="badge badge-soft-success font-size-12">{{ demande.NomStructure}}</span>
												</td>
												<td>
													<a href="/dashboard/consultion-demandes-{{demande.id}}" class="btn btn-primary btn-sm">Voir</a>
												</td>
											</tr>

										{% endif %}
								
							{% endfor %}
								
								
							</tbody>
						</table>
					</div>

				</div>
			</div>

			<br>

			<div class="card">
				<div class="card-body">
					<h4 class="card-title mb-4">Les 4 dernières demandes (déleguer ma Comptabilité)</h4>

					<div class="table-responsive">
						<table class="table table-centered">
							<thead>
								<tr>
									<th scope="col">Id no.</th>
									<th scope="col">Noms & Prenoms</th>
									<th scope="col">Email</th>
									<th scope="col" colspan="4">Abonnement/Prix</th>
								</tr>
							</thead>
							<tbody>
							{% for demande in comptabilite %}	
										{% if  demande.id < 5 %}	

											<tr>
												<td>
													<a href="javascript: void(0);" class="text-body fw-medium">#{{ demande.id }}</a>
												</td>
												<td>{{ demande.nom }} {{ demande.prenom }}</td>
												<td>{{ demande.Email }}</td>
												<td>
													<div>{{ demande.TypeAbonnement}}</div>
													<span class="badge badge-soft-success font-size-12"> € {{ demande.Montant}}</span>
												</td>
												<td>
													<a href="/dashboard/consultion-demandes-{{demande.id}}" class="btn btn-primary btn-sm">Voir</a>
												</td>
											</tr>

										{% endif %}
								
							{% endfor %}
								
								
							</tbody>
						</table>
					</div>
					
				</div>
			</div>
		</div>


	</div>
	<!-- end row -->


{% endblock %}
